{
    "compileOnSave": false,
    "compilerOptions": {
        "rootDir": ".",
        "sourceMap": true,
        "declaration": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "importHelpers": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "target": "es2015",
        "module": "es2020",
        "typeRoots": ["node_modules/@types"],
        "lib": ["es2017", "dom"],
        "skipLibCheck": true,
        "baseUrl": ".",
        "paths": {}
    },
    "files": ["main.ts", "polyfills.ts"],
    "include": ["src/**/*.d.ts"]
}
